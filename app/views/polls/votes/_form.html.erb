<%= bootstrap_form_for [poll, vote] do |f| %>
  <%= f.text_field :user_name %>

  <ul data-controller="sortable extended-sortable">
    <%= f.fields_for :vote_details do |vdf| %>
      <li>
        <%= vdf.object.choice.title %>
        <%= vdf.hidden_field :choice_id %>
      </li>
    <% end %>
  </ul>

  <ul data-controller="sortable extended-sortable" data-sortable-animation-value="150">
    <li>Pet the cat</li>
    <li>Get the groceries</li>
  </ul>

  <%= f.text_area :comment, data: {controller: 'textarea-autosize'} %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
